{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "dist",
    "strict": true,

    "baseUrl": "src",
    "paths": {
      "~*": ["*"]
    }
  },
  "lib": ["es2015"],
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
